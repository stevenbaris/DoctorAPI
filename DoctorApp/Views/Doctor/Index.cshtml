@{
}

<H1>Get All Todos</H1>

<a asp-action="AddTodo" asp-controller="Doctor">Add Todo</a>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">User Id</th>
      <th scope="col">title</th>
      <th scope="col">completed</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    @foreach(var todo in Model){
        <tr>
          <th scope="row">@todo.DoctorId</th>
          <td>@todo.FirstName</td>
          <td>@todo.LastName</td>
          <td>@todo.Specialization</td>
                <td><a asp-controller="Doctor" asp-action="Details" asp-route-todoId="@todo.DoctorId">View</a></td>
                <td><a asp-controller="Doctor" asp-action="Edit" asp-route-todoId="@todo.DoctorId">Edit</a></td>
                <td><a asp-controller="Doctor" asp-action="Delete" asp-route-todoId="@todo.DoctorId">Delete</a></td>
        </tr>
    }
  </tbody>
</table>